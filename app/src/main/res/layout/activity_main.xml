<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sh3h.materialwarehouse.ui.MainActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />

    <!--第一行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_30"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_apply_confim"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="申领确认"
            android:background="@null"
            android:textSize="@dimen/textsize_20"
            android:drawableTop="@mipmap/apply_confim"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_material_distribution"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="物资分配"
            android:background="@null"
            android:textSize="@dimen/textsize_20"
            android:drawableTop="@mipmap/material_distribution"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <!--第二行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_30"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_supplier_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/supplier_order"
            android:text="供应商接单"
            android:textSize="@dimen/textsize_20" />

        <Button
            android:id="@+id/btn_out_of_storage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/out_of_storage"
            android:text="出入库"
            android:textSize="@dimen/textsize_20"
           />
    </LinearLayout>
</LinearLayout>
