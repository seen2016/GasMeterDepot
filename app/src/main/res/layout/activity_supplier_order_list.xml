<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sh3h.materialwarehouse.ui.supplierorder.SupplierOrderListActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <LinearLayout
    android:id="@+id/ln_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/height_10"
    android:background="@drawable/bg_shape_corner"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/height_5"
        android:text="订单号:76786676" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:text="XXX:xxx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:text="XXX:xxx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:text="XXX:xxx" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:layout_height="wrap_content"
                android:text="XXX:xxx" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_5"
                android:text="XXX:xxx" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/height_10"
                android:background="@drawable/button_bg"
                android:textColor="@android:color/white"
                android:text="接收"/>
            <TextView
                android:id="@+id/tv_rejection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_10"
                android:background="@drawable/button_bg"
                android:textColor="@android:color/white"
                android:text="拒收"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/ln_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_10"
        android:background="@drawable/bg_shape_corner"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/height_5"
            android:text="订单号:878654654" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:text="XXX:xxx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:text="XXX:xxx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:text="XXX:xxx" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:layout_height="wrap_content"
                    android:text="XXX:xxx" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_5"
                    android:text="XXX:xxx" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_receive_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    android:background="@drawable/button_bg"
                    android:textColor="@android:color/white"
                    android:text="接收"/>
                <TextView
                    android:id="@+id/tv_rejection_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/height_10"
                    android:layout_marginLeft="@dimen/height_10"
                    android:background="@drawable/button_bg"
                    android:textColor="@android:color/white"
                    android:text="拒收"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
